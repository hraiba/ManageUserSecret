{
  "name": "usersecret",
  "displayName": "UserSecret",
  "description": "manage .NET user secret",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "MoHraiba",
  "icon": "images/asrar.jpg",
  "repository": {
    "type": "git",
    "url":"https://github.com/hraiba/ManageUserSecret.git"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Extension Setting",
      "properties": {
        "usersecret.maxDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth for searching .csproj files."
        }
      }
    },
    "commands": [
      {
        "command": "dotnet.manageUserSecrets",
        "title": "Manage .NET User Secrets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "sinon": "^19.0.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/xml2js": "^0.4.14",
    "fast-glob": "^3.3.2",
    "fg": "^0.0.1",
    "uuid": "^11.0.3",
    "xml2js": "^0.6.2"
  }
}
